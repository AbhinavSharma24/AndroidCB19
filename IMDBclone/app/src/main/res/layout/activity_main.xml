<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="#E6E2E2"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content">

                <TextView android:id="@+id/dummyEditTextFocus"
                          android:layout_width="0px"
                          android:layout_height="0px" />

                <EditText android:layout_width="340dp"
                          android:layout_height="wrap_content"
                          android:id="@+id/et"
                          android:hint="Search Movies"/>

                <Button android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#1a1a1a"
                        android:textColor="#C9C2C2"
                        android:id="@+id/searchbutton"
                        android:text="Search"
                        android:layout_toRightOf="@+id/et"/>

            </RelativeLayout>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/tv"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Now Showing"
                      android:textColor="#1a1a1a"
                      android:textStyle="bold"
                      android:textSize="25sp"
                      android:layout_margin="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/rview"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Popular"
                      android:textColor="#1a1a1a"
                      android:textStyle="bold"
                      android:textSize="25dp"
                      android:layout_margin="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/rview2"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Upcoming"
                      android:textColor="#1a1a1a"
                      android:textStyle="bold"
                      android:textSize="25dp"
                      android:layout_margin="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/rview3"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Top Rated"
                      android:textColor="#1a1a1a"
                      android:textStyle="bold"
                      android:textSize="25dp"
                      android:layout_margin="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/rview4"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
